<% if (title) { %>
<h1><%- title %></h1>
<% } else {
  res.redirect('/')
} %>
<form action="/inv/update" method="post">
  <fieldset class="form-container">
    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
    <label for="inv_make">Make:</label>
    <input name="inv_make" id="inv_make" type="text" required value="<%- locals.inv_make %>">
    <label for="inv_model">Model:</label>
    <input name="inv_model" id="inv_model" type="text" required value="<%- locals.inv_model %>">
    <label for="inv_year">Year:</label>
    <input name="inv_year" id="inv_year" type="text" required value="<%- locals.inv_year %>">
    <label for="inv_description">Description:</label>
    <input name="inv_description" id="inv_description" type="text" required value="<%- locals.inv_description %>">
    <input type="hidden" name="inv_image"
    <% if(locals.inv_image) { %> value="<%= locals.inv_image %>"
    <% } %>>
    <input type="hidden" name="inv_thumbnail"
    <% if(locals.inv_thumbnail) { %> value="<%= locals.inv_thumbnail %>"
    <% } %>>
    <label for="inv_price">Price:</label>
    <input name="inv_price" id="inv_price" type="text" pattern="^\d+(\.\d{1,2})?$" title="Enter a valid price (e.g., 10, 10.5, or 10.99)" required value="<%- locals.inv_price %>">
    <label for="inv_miles">Miles:</label>
    <input name="inv_miles" id="inv_miles" type="number" required value="<%- locals.inv_miles %>">
    <label for="inv_color">Color:</label>
    <input name="inv_color" id="inv_color" type="text" required value="<%- locals.inv_color %>">
    <label for="classification_name">Classification:</label>
    <%- classification %>
     <% if (errors) { %>
      <ul class="notice">
        <% errors.array().forEach(error => { %>
          <li><%= error.msg %></li>
        <%  }) %>
      </ul>
    <% } %>
    <button type="submit">Update Vehicle</button>
  </fieldset>
</form>