<% if (title) { %>
<h1><%- title %></h1>
<% } else {
  res.redirect('/')
} %>
<%# messages() %>
<%- page %>

<section class="reviews">
  <h2>Reviews</h2>
  <% if (reviews && reviews.length) { %>
    <ul class="review-list">
      <% reviews.forEach(function(r) { %>
        <li class="review-item">
          <div class="review-header">
            <span class="review-author"><%= r.account_firstname %> <%= r.account_lastname %></span>
            <span class="review-rating">Rating: <%= r.rating %>/5</span>
            <span class="review-date"><%= new Date(r.created_at).toLocaleString() %></span>
          </div>
          <p class="review-text"><%= r.review_text %></p>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No reviews yet.</p>
  <% } %>

  <% if (locals && locals.loggedin) { %>
    <h3>Leave a review</h3>
    <form method="post" action="/reviews/add" class="review-form">
      <fieldset class="form-container">
        <input type="hidden" name="inv_id" value="<%= inv_id %>" />
        <label for="rating">Rating</label>
        <select id="rating" name="rating" required>
          <option value="">Select</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
        </select>
        <label for="review_text">Your review</label>
        <textarea id="review_text" name="review_text" rows="4" minlength="5" maxlength="1000" required></textarea>
        <button type="submit">Submit Review</button>
      </fieldset>
    </form>
  <% } else { %>
    <p><a href="/account/login">Log in</a> to leave a review.</p>
  <% } %>
</section>